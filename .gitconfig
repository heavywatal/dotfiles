[user]
	name = Watal M. Iwasaki
	email = heavywatal@users.noreply.github.com
[color]
	ui = auto
[core]
	quotepath = false
	hookspath = ~/.config/git/hooks
[push]
	default = simple
[pull]
	ff = only
[url "git@github.com:"]
	pushinsteadof = https://github.com/
[commit]
	template = ~/.config/git/commit_template
[alias]
	st = status
	sta = status
	lasttag = describe --tags --abbrev=0
	l0 = log --format='%s'
	l1 = log --pretty='format:%C(auto)%h %ci% s% D'
	lg = log --pretty='format:%C(auto)%h %ci% D%+B'
	ln = log --pretty='format:%C(auto)%h %ci% D%+B' --name-status
