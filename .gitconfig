[user]
	name = Watal M. Iwasaki
	email = heavywatal@users.noreply.github.com
[color]
	ui = auto
[core]
	quotepath = false
	hookspath = ~/.config/git/hooks
[init]
	defaultBranch = main
[push]
	default = simple
[pull]
	ff = only
[url "git@github.com:"]
	pushinsteadof = https://github.com/
[commit]
	template = ~/.config/git/commit_template
[alias]
	st = status
	sta = status
	lasttag = describe --tags --abbrev=0
	l0 = log --format='%s'
	l1 = log --pretty=format:'%C(auto)%h %cd% s% D' --date=format-local:'%Y-%m-%d %H:%M'
	lg = log --pretty=format:'%C(auto)%h %cd% D% s%+b' --date=format-local:'%Y-%m-%d %H:%M' --color=always
	ln = lg --name-status
  lfn = lf --name-status
	ls = ls-tree --name-only @
[diff]
	colorMoved = default
[include]
	path = ~/.config/git/delta.gitconfig
